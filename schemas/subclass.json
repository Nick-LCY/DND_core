{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "子职业",
    "description": "用于描述DND5e的子职业",
    "type": "object",
    "properties": {
        "name": {
            "$ref": "internal/i18nKey.json",
            "title": "子职业名字"
        },
        "description": {
            "$ref": "internal/i18nKey.json",
            "title": "子职业详情"
        },
        "features": {
            "title": "子职业固有特性",
            "$ref": "internal/featureList.json"
        },
        "leveled_features": {
            "title": "不同等级时额外提供的子职业特性",
            "type": "array",
            "items": {
                "$ref": "internal/leveledFeature.json"
            }
        }
    },
    "required": [
        "name",
        "description",
        "leveled_features",
        "features"
    ]
}