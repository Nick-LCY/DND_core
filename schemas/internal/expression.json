{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "type": {
            "title": "数据类型",
            "type": "string",
            "enum": [
                "number",
                "string",
                "boolean",
                "void"
            ],
            "description": "默认值为void"
        },
        "target": {
            "type": "string",
            "title": "表达式的操作目标"
        },
        "operation": {
            "type": "string",
            "enum": [
                "+=",
                "-=",
                "+",
                "-",
                "="
            ]
        },
        "values": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "$ref": "expression.json"
                    },
                    {
                        "type": "number"
                    },
                    {
                        "type": "boolean"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "type": {
                                "enum": [
                                    "number",
                                    "string",
                                    "boolean"
                                ]
                            },
                            "value": {
                                "type": "string"
                            }
                        }
                    }
                ]
            }
        }
    },
    "required": [
        "values",
        "target",
        "operation"
    ]
}