{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "效果选择",
    "description": "用于表达选择某些effects",
    "properties": {
        "choose": {
            "description": "选择几个",
            "type": "integer"
        },
        "available": {
            "type": "array",
            "description": "有哪些可选",
            "items": {
                "anyOf": [
                    {
                        "$ref": "effectDict.json",
                        "description": "可以是选择里面再套选择"
                    },
                    {
                        "type": "string",
                        "description": "可以是effect_id"
                    }
                ]
            }
        }
    },
    "required": ["choose", "available"]
}