{
    "json.schemas": [
        {
            "fileMatch": [
                "**/races/**/*.json"
            ],
            "url": "./schemas/race.json"
        },
        {
            "fileMatch": [
                "**/features/**/*.json"
            ],
            "url":  "./schemas/feature.json"
        },
        {
            "fileMatch": [
                "**/subraces/**/*.json"
            ],
            "url": "./schemas/subrace.json"
        },
        {
            "fileMatch": [
                "**/effects/**/*.json"
            ],
            "url": "./schemas/effect.json"
        },
        {
            "fileMatch": [
                "**/classes/**/*.json"
            ],
            "url": "./schemas/class.json"
        },
        {
            "fileMatch": [
                "**/subclasses/**/*.json"
            ],
            "url": "./schemas/subclass.json"
        },
        {
            "fileMatch": [
                "**/backgrounds/**/*.json"
            ],
            "url": "/schemas/background.json"
        }
    ]
}